<div id="gitalk-container">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
  <script src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
  <script>

    var gitalk = new Gitalk({
      clientID: {{ site.JB.comments.gitalk.clientID}},
      clientSecret: {{ site.JB.comments.gitalk.clientSecret}},
      repo: {{ site.JB.comments.gitalk.repo}},
      owner: {{ site.JB.comments.gitalk.owner}},
      admin: {{ site.JB.comments.gitalk.admin}},
      id: {{ site.JB.comments.gitalk.id}},                    // Ensure uniqueness and length less than 50
      distractionFreeMode: {{ site.JB.comments.gitalk.distractionFreeMode}}    // Facebook-like distraction free mode
    })

    gitalk.render('gitalk-container')

  </script>

</div>